<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ExtensionBundleId="com.atrocty.ExSphax" ExtensionBundleVersion="1.0" Version="6.0">
	<ExtensionList>
		<Extension Id="com.atrocty.ExSphax" Version="1.0.0" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
			<Host Name="PHSP" Version="16.0" />
			<Host Name="PHXS" Version="16.0" />
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="6.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="com.atrocty.ExSphax">
			<DispatchInfo>
				<Resources>
					<MainPath>./index.html</MainPath>
					<ScriptPath>./jsx/Photoshop.jsx</ScriptPath>
					<CEFCommandLine>
						<Parameter>--enable-speech-input</Parameter>
						<Parameter>--enable-media-stream</Parameter>
						<Parameter>--enable-nodejs</Parameter>
						<Parameter>--mixed-context</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>ExSphax</Menu>
					<Geometry>
						<Size>
							<Height>400</Height>
							<Width>200</Width>
						</Size>
						<MaxSize>
							<Height>1200</Height>
							<Width>350</Width>
						</MaxSize>
						<MinSize>
							<Height>300</Height>
							<Width>150</Width>
						</MinSize>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
